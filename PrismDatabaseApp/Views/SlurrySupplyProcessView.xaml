<UserControl x:Class="PrismDatabaseApp.Views.SlurrySupplyProcessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.microsoft.com/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Background="#1A1A1A">

    <!-- ScrollViewer로 전체 콘텐츠를 감싸기 -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <!-- 상단 제목 및 진행률 -->
                <RowDefinition Height="Auto" />
                <!-- 데이터 그래프 및 메트릭 -->
                <RowDefinition Height="Auto" />
                <!-- 알림 리스트 -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 상단 섹션: 제목 및 진행률 -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Slurry Supply Process" FontSize="24" FontWeight="Bold" Foreground="White" />
                <TextBlock Text="Running since 9:00 AM" FontSize="14" Foreground="Gray" />
                <ProgressBar Value="{Binding Progress}" Maximum="100" Height="20" Margin="0,10,0,0" Foreground="#00A4FF" Background="#2D2D2D" />
                <TextBlock Text="{Binding EstimatedTime}" FontSize="14" Foreground="Gray" />
            </StackPanel>

            <!-- 데이터 그래프와 메트릭 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,20">
                <!-- 첫 번째 그래프와 메트릭 -->
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                         <!--그래프--> 
                        <RowDefinition Height="Auto" />
                         <!--메트릭--> 
                    </Grid.RowDefinitions>

                     <!--그래프--> 
                    <Border Grid.Row="0" Background="#2D2D2D" CornerRadius="5" Width="400" Height="300">
                        <lvc:CartesianChart Series="{Binding SpeedChartSeries}" Foreground="White" DisableAnimations="True">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Time" Labels="{Binding XAxisLabelsSpeed}" Foreground="White" />
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Speed" MinValue="0" MaxValue="2" Foreground="White" />
                            </lvc:CartesianChart.AxisY>

                        </lvc:CartesianChart>
                    </Border>

                     <!--메트릭--> 
                    <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Slurry Supply Speed" Foreground="White" FontSize="14" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding SlurrySupplySpeed}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>

                 <!--두 번째 그래프와 메트릭--> 
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                         <!--그래프--> 
                        <RowDefinition Height="Auto" />
                         <!--메트릭--> 
                    </Grid.RowDefinitions>

                     <!--그래프--> 
                    <Border Grid.Row="0" Background="#2D2D2D" CornerRadius="5" Width="400" Height="300">
                        <lvc:CartesianChart Series="{Binding TemperatureChartSeries}" Foreground="White">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Time" Labels="{Binding XAxisLabelsTemperature}" Foreground="White" />
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Temperature" Foreground="White" />
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Border>

                     <!--메트릭--> 
                    <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Slurry Supply Temperature" Foreground="White" FontSize="14" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding SlurrySupplyTemperature}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>

                <!-- 세 번째 그래프와 메트릭 -->
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <!-- 그래프 -->
                        <RowDefinition Height="Auto" />
                        <!-- 메트릭 -->
                    </Grid.RowDefinitions>

                    <!-- 그래프 -->
                    <Border Grid.Row="0" Background="#2D2D2D" CornerRadius="5" Width="400" Height="300">
                        <lvc:CartesianChart Series="{Binding VolumeChartSeries}" Foreground="White">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Time" Labels="{Binding XAxisLabelsVolume}" Foreground="White" />
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Volume" Foreground="White" />
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Border>

                    <!-- 메트릭 -->
                    <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Slurry Supply Volume" Foreground="White" FontSize="14" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding SlurrySupplyVolume}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- 알림 -->
            <Border Grid.Row="2" Background="#2D2D2D" CornerRadius="5" Padding="10">
                <StackPanel>
                    <TextBlock Text="Notifications" FontSize="20" Foreground="White" Margin="10" />
                    <ListBox Background="#1A1A1A" Foreground="White" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
